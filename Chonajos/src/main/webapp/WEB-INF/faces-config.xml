<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <managed-bean>
        <managed-bean-name>dominioUsuario</managed-bean-name>
        <managed-bean-class>com.web.chon.dominio.Usuario</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>usuarioBean</managed-bean-name>
        <managed-bean-class>com.web.chon.bean.BeanUsuario</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>usuario</property-name>
            <value>#{dominioUsuario}</value>
        </managed-property>
        <managed-property>
            <property-name>serviceUsuario</property-name>
            <value>#{usuarioService}</value>
        </managed-property>
    </managed-bean>    

</faces-config>
